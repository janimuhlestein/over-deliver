- var average = review.average

div.Post
  div.Title
    h2 Service: #{review.service}
    h2 Title: #{review.title}
    h2 Average Rating:
    if average == 5
      p.stars ★★★★★
    if average == 4
      p.stars ★★★★
    if average == 3
      p.stars ★★★
    if average == 2
      p.stars ★★
    if average == 1
      p.stars ★
    h2 Content:
    p #{review.text}
    button Comment
    button Edit
    button.vote-post-button(type="submit" onClick='voteFormHandler(' + review.id + ')') Vote
    p Votes: #{review.upVotes}
    p Comments: #{review.comments}

script(src="/javascript/vote.js")
    