extends layout

block layout-content
  div.View
    img(src="/assets/images/dashboarddelivery.png")
    div.flex-row
      div.Message
        //- div(data-toggle="modal" data-target="#avatar") 
        //-   img(src="placeholder.webp")
        //-   p.flex-item Click to upload an avatar
        //-   boostrap modal       
        div(class="container")
          div(class="row")
            div(class="col-3")
              h3(id="dashboardUsername" class="dashboard-title") USERNAME
                div(class="dashboard-container")
                  p #{user}
            div(class="col-3")
              h3(id="dashboardReviews" class="dashboard-title") REVIEWS
                div(class="dashboard-container")
                  p #{reviewCount}
            div(class="col-3")
              h3(id="dashboardVotes" class="dashboard-title") VOTES
                div(class="dashboard-container")
                  p #{voteCount}
            div(class="col-3")
              h3(id="dashboardComments" class="dashboard-title") COMMENTS
                div(class="dashboard-container")
                  p #{commentCount}
      div.Create
        h1 Create New Post
        br
        div.ratings
          h2(class="dashboard-review-title") SERVICE 
            input(type='text' id="service")
          h2(class="dashboard-review-title") TITLE&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            input(type='text' id="review-title")
          //- tooltips for category criteria
          div
            h2(class="dashboard-review-text") <a href="#" data-toggle="tooltip" title="Was the driver wearing a mask? Did they leave things at your door without contact if you asked for it? Were things packaged properly? Was everything sealed?"><i class="fas fa-info-circle"></i></a>  Safety:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              include stars
          div
            h2(class="dashboard-review-text") <a href="#" data-toggle="tooltip" title="How was the food? Was it properly seasoned? Was it still the desired temperature when it got to you?"><i class="fas fa-info-circle"></i ></a>  Quality:&nbsp;&nbsp;&nbsp;&nbsp;
              include stars
          div
            h2(class="dashboard-review-text") <a href="#" data-toggle="tooltip" title="Did they get your order correct? Did you get everything that you ordered?"><i class="fas fa-info-circle"></i ></a>  Accuracy:
              include stars
          div
            h2(class="dashboard-review-text") <a href="#" data-toggle="tooltip" title="Were they timely? Did you feel like the time given was reasonable?"><i class="fas fa-info-circle"></i ></a>  Speed:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              include stars
          div
            h2(class="dashboard-review-text") <a href="#" data-toggle="tooltip" title="Did you feel the prices matched up with what you got?"><i class="fas fa-info-circle"></i ></a>  Value:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              include stars
          br
          h2(id="writeReview") Write a Review:
            textarea(type='input' id="review-text")
          button.btn(id="create" type="submit" onClick="newFormHandler()") CREATE
  if reviews.length
    div.post-row.wrap
      each review in reviews
        include post-preview

